<?xml version="1.0" encoding="utf-8"?>
<!--shape指定形状类型，默认为 rectangle-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <!--solid指定形状的填充色，并且只有android:color一个属性-->
    <solid
        android:color="#2F90BD"/>
    <!--设置内容区域距离边界的距离-->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"/>
    <!--设置圆角，只适用于rectangle-->
    <corners
        android:radius="200dp"/>
    <!--设置描边，dashWidth只破折线宽度，dashGap值破折线之间距离，两者要一起使用-->
    <stroke
        android:width="2dp"
        android:color="@color/colorAccent"
        android:dashGap="4dp"
        android:dashWidth="4dp"
        />

</shape>